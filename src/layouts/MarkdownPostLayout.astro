---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
<p><em>{frontmatter.description}</em></p>
<p>Written by {frontmatter.author}</p>
<img src={frontmatter.image.url} class="img-fluid" alt={frontmatter.image.alt} />
<div class="tags">
  {frontmatter.tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
  ))}
</div>
<slot />
</BaseLayout>
<style>
  a {
    color: #60535e;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #c4bbc3;
    border-top-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #dcd6db;
  }

  .dark .tag {
    border: dotted 1px #443b43;
    background-color: #292328;
  }
</style>
